data = CHART_YAML



data.each { |chart|
    t= ""
    count=0
    pnamespace = chart['namespace']
    pproperties = chart['properties']
    pversion = chart['version']
    pdebug = chart['debug']
    pfile = chart['file']
    if (pproperties != nil)
     chart['properties'].each{ |property|
     pname = property['name']
     pvalue = property['value']
     t= "#{t} --set #{pname}=#{pvalue}"
    }
    end

    ispresent = `helm list #{chart['name']}| wc -l `.strip

    cmd ="export HELM_HOME=/var/vcap/store/helm/;helm install "
    cmdUpgrade = "export HELM_HOME=/var/vcap/store/helm/;helm upgrade "

    unless pdebug.nil? || pdebug == 0
        cmd = "#{cmd} --debug "
        cmdUpgrade = "#{cmdUpgrade} --debug"
    end

