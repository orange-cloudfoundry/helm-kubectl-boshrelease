#!/bin/bash
set -e
source /var/vcap/jobs/action/bin/set_env
chmod +x /var/vcap/jobs/action/bin/*.rb

cd /var/vcap/jobs/action/bin/

RUN_DIR=/var/vcap/sys/run/action
LOG_DIR=/var/vcap/sys/log/action
DATA_DIR=/var/vcap/store/action

setup_directories() {
  mkdir -p "$RUN_DIR" "$LOG_DIR" "$DATA_DIR"
  chown -R vcap:vcap "$RUN_DIR" "$LOG_DIR" "$DATA_DIR"
}
send_process_stdout_to_logfile() {
  exec 1>> "$LOG_DIR/$NAME.stdout.log"
}
send_process_stderr_to_logfile() {
  exec 2>> "$LOG_DIR/$NAME.stderr.log"
}

export RUBYLIB=/var/vcap/jobs/action/bin/; /var/vcap/jobs/action/bin/./main.rb




