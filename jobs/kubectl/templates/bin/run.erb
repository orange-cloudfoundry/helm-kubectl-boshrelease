#!/bin/bash
source /var/vcap/jobs/kubectl/bin/set_env
<% if_p('kubernetes.default_storageclass') do |default_storageclass| %>
    kubectl patch storageclass <%= default_storageclass %> -p '{"metadata": {"annotations":{"storageclass.kubernetes.io/is-default-class":"true"}}}'
<% end %>

chmod +x /var/vcap/jobs/kubectl/bin/ingress.rb
chmod +x /var/vcap/jobs/kubectl/bin/namespaces.rb
chmod +x /var/vcap/jobs/kubectl/bin/secrets.rb
chmod +x /var/vcap/jobs/kubectl/bin/apply.rb
/var/vcap/jobs/kubectl/bin/./namespaces.rb
/var/vcap/jobs/kubectl/bin/./apply.rb
/var/vcap/jobs/kubectl/bin/./ingress.rb
/var/vcap/jobs/kubectl/bin/./secrets.rb

